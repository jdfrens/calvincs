<h1>Tag a New Image</h1>

<% form_for(@image) do |form| -%>
    <table summary="image data">
      <tr>
        <td><%= form.label :url, "URL" %></td>
        <td><%= form.text_field :url, :size => 65 %></td>
      </tr>
      <tr>
        <td><%= form.label :caption %></td>
        <td><%= form.text_area :caption, :rows => 4, :cols => 65 %></td>
      </tr>
      <tr>
        <td><%= form.label :tags_string, "Tags" %></td>
        <td><%= form.text_field :tags_string, :size => 40 %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= submit_tag "Add image", :class => "submit" %></td>
      </tr>
    </table>
<% end %>
