<% @newsitems.each do |news_item| %>
    <div id="news-item-<%= news_item.id %>" class="news-item">
      <h2>
        <%= h(news_item.headline) %>
        <% if current_user -%>
            <%= link_to "edit...", edit_newsitem_path(news_item), { :class => "more" } %>
        <% end %>
      </h2>

      <p class="goes-live-date">Posted on <%= news_item.goes_live_at.to_s(:news_posted) %></p>

      <div class="content">
        <%= johnny_textilize news_item.content %>
      </div>

      <p class="more"><a href="#top">back to top...</a></p>
    </div>
<% end %>
