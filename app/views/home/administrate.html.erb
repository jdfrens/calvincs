<h1>Master Administration</h1>

<div id="administration">
  <h2>News and Events</h2>

  <img src="/images/newspaper-icon.png"/>
  <ul id="news_administration">
    <li><%= link_to 'Create news item', new_newsitem_path %></li>
    <li>Events</li>
    <ul>
      <li><%= link_to 'Create new colloquium', new_event_path(:kind => "Colloquium") %></li>
      <li><%= link_to 'Create new conference', new_event_path(:kind => "Conference") %></li>
    </ul>
  </ul>

  <h2>Webpages and Other Documents</h2>

  <img src="/images/page-icon.png"/>
  <ul id="content_administration">
    <li><%= link_to 'List', pages_path %></li>
    <li><%= link_to 'Create', new_page_path %></li>
  </ul>

  <h2>Images</h2>

  <img src="/images/images-icon.png"/>
  <ul id="picture_administration">
    <li><%= link_to 'List images', pictures_path %></li>
    <li><%= link_to 'Add image', new_picture_path %></li>
    <li><%= link_to 'Refresh dimensions', refresh_pictures_path %></li>
  </ul>

  <h2>Courses</h2>

  <ul id="course_administration">
    <li><%= link_to 'List', courses_path %></li>
    <li><%= link_to 'Create', new_course_path %></li>
  </ul>

  <h2>Users</h2>

  <ul id="user_administration">
    <li><%= link_to "Create user", new_user_path %></li>
  </ul>
</div>
