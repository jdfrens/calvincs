$(document).ready(function() {
    $("#edit_page_<%= @page.id %>").submit(function() {
        $.ajax({
            'beforeSend': function(xhr) {
                xhr.setRequestHeader("Accept", "text/javascript")
            },
            type: 'PUT',
            url: this.action,
            data: $(this).serialize(),
            dataType: "script"
        });
        return false;
    });
});
