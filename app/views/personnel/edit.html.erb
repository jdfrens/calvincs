<h1>Edit User Information</h1>

<% form_for :user, :url => { :controller => "personnel", :action => "update" }, :html => { :method => :put } do |form| -%>
    <table>
      <tr>
        <td><%= form.label :first_name %></td>
        <td><%= form.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= form.label :last_name %></td>
        <td><%= form.text_field :last_name %></td>
      </tr>
      <tr>
        <td><%= form.label :job_title %></td>
        <td><%= form.text_field :job_title %></td>
      </tr>
      <tr>
        <td><%= form.label :email_address %></td>
        <td><%= form.text_field :email_address %></td>
      </tr>
      <tr>
        <td><%= form.label :office_phone %></td>
        <td><%= form.text_field :office_phone %></td>
      </tr>
      <tr>
        <td><%= form.label :office_location %></td>
        <td><%= form.text_field :office_location %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= form.submit %></td>
      </tr>
    </table>
<% end -%>
