<% if @user.page(:interests) || current_user -%>
  <div id="interests">
    <h2>Interests</h2>

    <% if @user.page(:interests) -%>
      <%= @user.page(:interests).render_content %>
    <% end -%>
    
	<% restrict_to :edit do -%>
      <p>
        <%= link_to "view/edit interests", :controller => "page",
               :action => "view", :id => "#{@user.username}_interests" %>
      </p>
	<% end -%>
  </div>
<% end -%>
